<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head'); %>
  <body>
    <%- include('../partials/navbar'); %>
    <div class="container">
      <nav class="row" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= subject %> <%= courseId %></li>
        </ol>
      </nav>
    </div>
    <h1 class="h1 text-center mt-5 mb-4"><%= course_name %></h1>
    <h1 class="h3 text-center"><%= subject %> <%= courseId %></h1>
    <div class="container" style="width: 55%">
      <h1 class="h3">Autumn 2023</h1>
      <% if (current_course_sections.length > 0) { %>
      <div class="list-group">
        <% current_course_sections.forEach(function(current_course_section){ %> <%-
        include('../partials/current_course_section', {subject: subject, courseId: courseId, current_course_section: current_course_section});
        %> <% }) %> <% } else { %>
        <h1 class="h5 mt-4 mb-5 d-flex justify-content-center">No sections found</h1>
        <% } %>
      <h1 class="h3">Previous sections</h1>
      <% if (course_sections.length > 0) { %>
      <div class="list-group">
        <% course_sections.forEach(function(course_section){ %> <%-
        include('../partials/course_section', {subject: subject, courseId: courseId, course_section: course_section, summaries: summaries});
        %> <% }) %> <% } else { %>
          <h1 class="h5 mt-4 mb-5 d-flex justify-content-center">No sections found</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>
