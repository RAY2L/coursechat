<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/navbar'); %> <% const metadata_obj = metadata; %> <%-
  include('../partials/head', {title: `${subject} ${courseId}
  ${metadata_obj["Section"]}`}); %>
  <body>
    <div class="container">
      <nav class="row" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">
            <a href="/<%= subject %>/<%= courseId %>"
              ><%= subject %> <%= courseId %></a
            >
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            Autumn 2023
          </li>
        </ol>
      </nav>
    </div>
    <h1 class="h1 text-center mt-5 mb-4"><%= metadata_obj["Course Name"] %></h1>
    <h1 class="h3 text-center">
      <%= metadata_obj["Subject"] %> <%= metadata_obj["CourseId"] %> <%=
      metadata_obj["Section"] %> - <%= metadata_obj["Instructors"].join(", ") %>
    </h1>
    <h1 class="h5 text-center"><%= metadata_obj["Offer time"] %></h1>
    <div class="container">
      <div class="row">
        <h1 class="h3">Description</h1>
        <p>
          <% if (metadata_obj["Description"]) { %> <%=
          metadata_obj["Description"] %> <% } else { %> Not specified <% } %>
        </p>
      </div>
      <div class="row">
        <h1 class="h3">Prerequisites</h1>
        <p>
          <% if (metadata_obj["Prerequisites"]) { %> <%=
          metadata_obj["Prerequisites"] %> <% } else { %> Not specified <% } %>
        </p>
      </div>
    </div>
  </body>
</html>
