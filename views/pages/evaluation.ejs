<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', {title: `${subject} ${courseId} eval
  ${evalID}`}); %>
  <body>
    <!-- Include const metadata_obj = metadata; or else item["Subject"], item["CourseId"] is undefined -->
    <%- include('../partials/navbar'); %> <% const metadata_obj = metadata; %>
    <div class="container">
      <nav class="row" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">
            <a href="/<%= subject %>/<%= courseId %>"
              ><%= subject %> <%= courseId %></a
            >
          </li>
          <li class="breadcrumb-item active" aria-current="page">Evaluation</li>
        </ol>
      </nav>
    </div>
    <h1 class="h1 text-center mt-5 mb-4"><%= metadata_obj["Course Name"] %></h1>
    <% const sections = metadata_obj["Catalog Number"].map(function(item) {
    return `${item["Subject"]} ${item["CourseId"]} ${item["Section"]}`;
    }).join(", "); %>
    <h1 class="h3 text-center">
      <%= sections %> - <%= metadata_obj["Instructors"].join(", ") %>
    </h1>
    <div class="container" style="width: 75%">
      <p class="text-center lead">
        <a href="<%= metadata['url'] %>" target="_blank">Link</a> to original
        course evaluation
      </p>
      <% if (summary) { %>
      <div class="row">
        <h1 class="h3">Grading</h1>
        <p><%= summary["Grading"] %></p>
      </div>
      <div class="row">
        <h1 class="h3">Workload</h1>
        <p><%= summary["Workload"] %></p>
      </div>
      <div class="row">
        <h1 class="h3">Teaching Style</h1>
        <p><%= summary["Teaching Style"] %></p>
      </div>
      <div class="row">
        <h1 class="h3">Difficulty Level</h1>
        <p><%= summary["Difficulty Level"] %></p>
      </div>
      <% } else { %>
      <div class="row">
        <h1 class="h4 text-center my-3">
          No summary generated, see
          <a href="/info#info-missing-summary">info</a>
        </h1>
      </div>
      <% } %>
    </div>
  </body>
</html>
